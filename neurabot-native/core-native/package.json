{
  "name": "@neurabot/core-native",
  "version": "0.1.0",
  "description": "NEURABOT core native modules - high-performance Rust bindings",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "napi test --platform"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.5.0"
  },
  "napi": {
    "name": "core-native",
    "triples": {
      "additional": [
        "aarch64-unknown-linux-gnu",
        "x86_64-unknown-linux-musl",
        "aarch64-apple-darwin",
        "x86_64-apple-darwin",
        "aarch64-pc-windows-msvc",
        "x86_64-pc-windows-msvc"
      ]
    }
  },
  "engines": {
    "node": ">= 18"
  }
}
