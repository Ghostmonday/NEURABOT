# ============================================================================
# Sowwy Environment Configuration
# ============================================================================

# PRIMARY MODEL: MiniMax M2.1 (API key or OAuth)
# Option A - API key (paste your key in .env; do not commit .env):
#   MINIMAX_API_KEY=sk-cp-your-key-here
# Option B - OAuth (minimax-portal-auth extension):
#   openclaw models auth login --provider minimax-portal
#
# MiniMax supports both OpenAI-compatible and Anthropic-compatible APIs:
# - Global endpoint: https://api.minimax.io/anthropic
# - CN endpoint: https://api.minimaxi.com/anthropic
# - Default model: MiniMax-M2.1
MINIMAX_API_KEY=

# PostgreSQL for Mission Control
SOWWY_POSTGRES_HOST=localhost
SOWWY_POSTGRES_PORT=5432
SOWWY_POSTGRES_USER=sowwy
SOWWY_POSTGRES_PASSWORD=your-secure-password
SOWWY_POSTGRES_DB=sowwy

# LanceDB for Identity (vector storage)
SOWWY_IDENTITY_PATH=./data/identity

# SMT Throttler (align with MiniMax quota: e.g. 100 prompts per 5 hours)
SOWWY_SMT_WINDOW_MS=18000000  # 5 hours
SOWWY_SMT_MAX_PROMPTS=100
SOWWY_SMT_TARGET_UTILIZATION=0.80

# Scheduler
SOWWY_SCHEDULER_POLL_MS=5000
SOWWY_SCHEDULER_MAX_RETRIES=3
SOWWY_SCHEDULER_STUCK_THRESHOLD_MS=3600000  # 1 hour

# Security
SOWWY_KILL_SWITCH=false
SOWWY_REQUIRE_APPROVAL=true

# Startup Behavior
# Auto-approve autonomous operations on startup (no prompt)
SOWWY_AUTO_APPROVE=false
# Skip startup prompt entirely (for automated deployments)
SOWWY_SKIP_PROMPT=false

# ============================================================================
# Extensions Configuration
# ============================================================================

# Twilio SMS (if using)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Proton Email (if using)
PROTON_EMAIL=your@email.com
PROTON_PASSWORD=your-password

# Remote Mac (Track 1 â€” iOS App Factory / Remote Hand Architecture)
# SSH target for running commands on the build Mac (e.g. user@host or user@host:22)
REMOTE_MAC_HOST=
# Optional: path to SSH identity file (e.g. ~/.ssh/id_ed25519)
# REMOTE_MAC_IDENTITY=

# DeskIn Mac Control (if using)
DESKIN_API_URL=https://api.deskin.com
DESKIN_DEVICE_ID=your-device-id
